<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "〜マイページ〜" %>
      </h2>
      <%= column_chart @data, width: "200px", height: "300px" %>
    <div class="average_score">
      <span>AVERAGE SCORE</span>
      <%= Post.average(:total_score).floor %>
    </div>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">ゴルフ歴</th>
            <td class="table__col2"><%= @user.golf_history %></td>
          </tr>
          <tr>
            <th class="table__col1">マイムービー</th>
            <td class="table__col2"><%= link_to "ムービー", videos_path(user_id:@user.id) %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
      </div>
    </div>
  </div>
</div>