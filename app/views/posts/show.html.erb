<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @post.golf_course %>
      </p>
      <%= link_to "by#{@post.user.nickname}", root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", root_path, class: :prototype__btn %>
          <%= link_to "削除する", root_path, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @post.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__message">
            <%= @post.date %>
          </p>
        </div>
        <div class="prototype__detail">
         <p class="detail__title">スコア</p>
          <p class="detail__message">
           <span>IN</span>
           <%= @post.first_half_score %>
          </p>
          <p class="detail__message">
           <span>OUT</span>
           <%= @post.second_half_score %>
          </p>
          <p class="detail__message">
           <span>Total</span>
           <%= @post.total_score %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with local: true do |f|%>
